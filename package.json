{
  "name": "docs_gm",
  "version": "3.1.2",
  "description": "The fantastic documentation generator for GameMaker:Studio and GameMaker Studio 2",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "test": "npm run lint && npm run coverage",
    "test-only": "npm run build && npm run unit-tests",
    "unit-tests": "alsatian \"./dist/tests/unit/**/*.spec.js\"",
    "build": "tsc -p .",
    "watch": "tsc -p . --watch",
    "clean": "rimraf ./dist/ ./coverage/ ./.nyc_output/",
    "coverage": "npm run build && nyc npm run unit-tests",
    "report-coverage": "nyc report --reporter=text-lcov | coveralls",
    "lint": "tslint --project . -t verbose",
    "prepublishOnly": "npm run clean && npm run build",
    "integration": "npm run build && npm link && alsatian \"./dist/tests/integration/**/*.spec.js\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jhm-ciberman/docs_gm.git"
  },
  "keywords": [
    "gamemaker",
    "gms2",
    "gms1",
    "gms",
    "docs",
    "documentation",
    "generator",
    "game",
    "maker",
    "gms",
    "jsdoc"
  ],
  "author": "Javier \"Ciberman\" Mora",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jhm-ciberman/docs_gm/issues"
  },
  "homepage": "https://github.com/jhm-ciberman/docs_gm#readme",
  "bin": {
    "docs_gm": "dist/src/docs_gm.js"
  },
  "devDependencies": {
    "@types/fs-extra": "^8.0.0",
    "@types/minimatch": "^3.0.3",
    "@types/mock-fs": "^3.6.30",
    "@types/mock-require": "^2.0.0",
    "@types/node": "^12.6.8",
    "@types/nunjucks": "^3.1.1",
    "@types/open": "^6.2.0",
    "@types/showdown": "^1.9.3",
    "@types/xml2js": "^0.4.4",
    "@types/yargs": "^13.0.0",
    "alsatian": "^3.0.0-beta.2",
    "coveralls": "^3.0.5",
    "nyc": "^13.3.0",
    "rimraf": "^2.6.3",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "comment-parser": "^0.6.0",
    "del": "^5.0.0",
    "docs_gm-basic": "^3.1.0",
    "fast-glob": "^3.0.4",
    "fs-extra": "^8.1.0",
    "get-installed-path": "^4.0.8",
    "inversify": "^5.0.1",
    "minimatch": "^3.0.4",
    "nunjucks": "^3.2.0",
    "open": "6.4.0",
    "pkg-dir": "^4.2.0",
    "reflect-metadata": "^0.1.13",
    "showdown": "^1.9.0",
    "xml2js": "^0.4.19",
    "yargs": "^13.3.0"
  }
}
