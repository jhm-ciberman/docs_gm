{% extends "src/parent.njk" %}
{% import "src/macros/breadcrumb.njk" as breadcrumbMacro %}

{# Overrides the block named "content" that is declared in the parent.njk file #}
{% block content %}

    {{ breadcrumbMacro.breadcrumb(folder) }}

    {# If the current element is a script, prints the script documentation #}
    <a href="{{ linkTo(project.root) }}">Back to index page</a>

    <h2>{{ folder.name }}</h2>

    {{ folder.description }}

    {# Prints the table of contents #}
    <ul class="nav flex-column">
        {% for subresource in subresources %}
            <li class="nav-item">
                {% if subresource.type === "folder" %}
                    <a class="nav-link" href="{{ linkTo(subresource) }}">Folder: {{ subresource.name }}</a>
                {% elif subresource.type === "script" %}
                    <a class="nav-link" href="{{ linkTo(subresource) }}">{{ subresource.name }}</a>
                {% endif %}
            </li>
        {% endfor %}
    </ul>

{% endblock content %}


